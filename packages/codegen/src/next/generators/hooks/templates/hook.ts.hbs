import { fetcher } from '../../../../utils/fetcher';
import { 
  {{ names.operation }} as operation, 
  {{ names.request }}, 
  {{ names.response }} 
} from '{{ names.commonUtils }}';
import { SWRConfiguration } from 'swr/dist/types';
import useSWR from 'swr';

export const {{ names.hook }} = (request: {{ names.request }}, SWRConfig?: SWRConfiguration) => {
  const { data, error, mutate, isValidating } = useSWR<{{ names.response }}>(
    ['{{ url }}', {operation, request}], 
    fetcher, 
    {revalidateOnFocus: false, ...SWRConfig}
  );

  return {
    data,
    error,
    refetch: async () => mutate(),
    isValidating,
  };
};
